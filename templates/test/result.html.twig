{% extends 'base.html.twig' %}

{% block title %}Test
{% endblock %}

{% block body %}

{# {{ dump(formulaireTest)}} #}

	<div class="example-wrapper">
		<h1>Test du nombre
			{{ num }}
		</h1>
		<p class='alert alert-success'>
			{% if num is even %}
				{{ num }}
				est pair et donc ce n'est pas un nombre premier
			{% else %}
				{{ num }}
				est impair et
                {% set premier = 0 %}
				{% if num not in [1,3,5,7,9] %}
					{% for i in range (3, (num/2), 2) %}
						{% if num is divisible by(i) %}
							{% set premier = i %}
						{% endif %}
					{% endfor %}
				{% endif %}
				{% if premier==0 %}
					est premier
				{% else %}
					n'est pas premier car il est divisible par
					{{ premier }}
				{% endif %}
			{% endif %}
		</p>
	</div>
{% endblock %}
